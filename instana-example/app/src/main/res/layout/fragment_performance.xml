<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".ui.performance.PerformanceFragment">

        <include layout="@layout/top_bar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lowMemory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Force low memory" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/frameSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Force frame skip" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/anr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Force ANR" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/unhandledException"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Force Unhandled EX" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/unhandledExceptionRunBlocking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Force Unhandled EX (runBlocking)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/unhandledExceptionGlobalScope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Force Unhandled EX (GlobalScope)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/unhandledExceptionMainLooper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Force Unhandled EX (MainLooper)" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="end"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            tools:text="@string/lorem_ipsum" />

    </LinearLayout>
</ScrollView>
